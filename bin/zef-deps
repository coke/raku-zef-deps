#!/usr/bin/env raku

=begin comment

Use zef tool to identify all (nested) dependencies for a named module

=end comment

use App::Zef-Deps;

BEGIN {
    if %*ENV<ZEF_DEPS_INDENT> {
        $App::Zef-Deps::indent = %*ENV<ZEF_DEPS_INDENT>.Int;
    }
}

multi MAIN('.', Bool :$graph=False)  {
    use JSON::Fast;
    my @depends = |(from-json "META6.json".IO.slurp)<depends>;
    MAIN-handler(@depends, :$graph);
}

multi MAIN(*@module, Bool :$graph=False)  {
    MAIN-handler(@module, :$graph);
}
